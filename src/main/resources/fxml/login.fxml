<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.titiplex.budget.ui.LoginController" prefWidth="800" prefHeight="540">
    <center>
        <VBox alignment="CENTER" spacing="12">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>
            <Label text="Connexion / Création de compte commun" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" halignment="RIGHT"/>
                    <ColumnConstraints minWidth="300" halignment="LEFT"/>
                </columnConstraints>
<!--                <RowConstraints vgrow="NEVER"/>-->
                <Label text="Votre nom:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="nameField" promptText="Alice" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="ID du compte:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="groupIdField" promptText="budget-maison" GridPane.rowIndex="1"
                           GridPane.columnIndex="1"/>

                <Label text="Mot de passe du compte:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <PasswordField fx:id="passField" promptText="******" GridPane.rowIndex="2"
                               GridPane.columnIndex="1"/>

                <Label text="Seeds (optionnel, WAN):" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="seedsField" promptText="ex: 1.2.3.4:7800, ami.dyndns.org:7800"
                           GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Port local:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="portField" promptText="7800" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
            </GridPane>
            <HBox spacing="10">
                <Button text="Créer / Rejoindre" onAction="#onJoin"/>
            </HBox>
            <Label text="Astuce: sans seeds, la découverte fonctionne en LAN (multicast). Pour WAN, indiquez au moins une adresse publique d'un pair."
                   wrapText="true" maxWidth="620"/>
        </VBox>
    </center>
</BorderPane>